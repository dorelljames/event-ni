---
import TopBanner from "./TopBanner.astro";
import Search from "./Search.astro";
interface Props {
  showBack?: boolean;
  title?: string;
  subtitle?: string;
  showSearch?: boolean;
}

const {
  showBack = false,
  title = "cebby",
  subtitle = "Discover all tech events in Cebu in one place...",
} = Astro.props;

const isHomePage = Astro.url.pathname === "/";
---

<header
  class="bg-white/80 backdrop-blur-lg border-b border-gray-200/40 sticky top-0 z-50"
>
  <TopBanner />
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center py-4">
      <div class="flex-1 flex items-center justify-between gap-8">
        <div class="flex items-center gap-3">
          {
            showBack && (
              <a
                href="javascript:history.length > 1 ? history.back() : window.location.href = '/'"
                class="p-2 rounded-xl bg-purple-50/50 text-purple-600 hover:bg-purple-100/80 transition-all duration-200 hover:scale-105"
              >
                <svg
                  class="w-5 h-5"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2.5"
                    d="M15 19l-7-7 7-7"
                  />
                </svg>
              </a>
            )
          }
          <a
            href="/"
            class="flex-shrink-0 hover:opacity-90 transition-all duration-200 group"
          >
            {
              isHomePage && (
                <img
                  src="/logo.svg"
                  alt={title}
                  class="h-10 w-auto group-hover:scale-105 transition-transform duration-200"
                />
              )
            }
            {
              !isHomePage && (
                <div>
                  <h1 class="text-lg font-bold text-gray-900 truncate max-w-xs md:max-w-full">
                    {title}
                  </h1>
                  {subtitle && (
                    <p class="text-sm text-gray-500/90">{subtitle}</p>
                  )}
                </div>
              )
            }
          </a>
        </div>
      </div>

      {
        isHomePage && (
          <div class="hidden sm:flex justify-end w-[70%] max-w-2xl ml-auto">
            <Search />
          </div>
        )
      }
    </div>
  </div>
</header>
