---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import SEO from '../components/SEO.astro';
import Header from '../components/Header.astro';

const metaDescription =
    'Discover tech events happening in Cebu through Cebby - your automated event discovery platform. We aggregate and surface the most relevant tech events to help you stay connected with the community.';
---

<Layout title="About Cebby - Automated Tech Event Discovery">
    <Fragment slot="head">
        <SEO
            title="About Cebby - Automated Tech Event Discovery"
            description={metaDescription}
            image="/og.png"
            type="website"
        />
    </Fragment>

    <Header />

    <main class="min-h-screen pb-16 sm:pb-0 pt-safe">
        <div class="container max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 px-safe">
            <!-- Hero Section with Clear Value Proposition -->
            <section class="text-center mb-16">
                <div class="max-w-4xl mx-auto">
                    <h1 class="text-4xl sm:text-5xl font-bold text-gray-900 mb-6">
                        Discover Tech Events in Cebu, Automatically
                        <span class="block text-2xl sm:text-3xl mt-4 text-purple-600"
                            >Your Smart Event Discovery Platform</span
                        >
                    </h1>
                    <p class="text-xl text-gray-600 mb-8">
                        We automatically aggregate and surface tech events from various sources, so you never miss out
                        on opportunities to learn and connect.
                    </p>
                    <div class="flex flex-col sm:flex-row justify-center gap-4">
                        <a
                            href="/"
                            class="inline-flex items-center justify-center px-8 py-3 bg-[#8234E6] hover:bg-[#6c2bc0] text-white font-medium rounded-xl transition-all duration-200 shadow-sm hover:shadow-md hover:scale-[1.02] group"
                        >
                            <span>Explore Upcoming Events</span>
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                class="h-5 w-5 ml-2 group-hover:translate-x-1 transition-transform"
                                fill="none"
                                viewBox="0 0 24 24"
                                stroke="currentColor"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                            </svg>
                        </a>
                        <a
                            href="#how-it-works"
                            class="inline-flex items-center justify-center px-8 py-3 bg-purple-50 hover:bg-purple-100 text-purple-700 font-medium rounded-xl transition-all duration-200 group"
                        >
                            <span>See How It Works</span>
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                class="h-5 w-5 ml-2 group-hover:translate-y-1 transition-transform"
                                fill="none"
                                viewBox="0 0 24 24"
                                stroke="currentColor"
                            >
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"
                                ></path>
                            </svg>
                        </a>
                    </div>
                </div>
            </section>

            <!-- Social Proof Section -->
            <section class="mb-16 text-center">
                <p class="text-lg text-gray-600 mb-6">Aggregating Events From Cebu's Top Tech Communities</p>
                <div
                    class="flex flex-wrap justify-center items-center gap-8 opacity-70 hover:opacity-100 transition-opacity"
                >
                    <img
                        src="/partners/cebu-it-hub.png"
                        alt="CTC"
                        class="h-8 w-auto filter grayscale hover:grayscale-0 transition-all"
                    />
                    <img
                        src="/partners/startup-cebu.png"
                        alt="enspace Cebu"
                        class="h-8 w-auto filter grayscale hover:grayscale-0 transition-all"
                    />
                    <img
                        src="/partners/tech-society.png"
                        alt="The Company Cebu"
                        class="h-8 w-auto filter grayscale hover:grayscale-0 transition-all"
                    />
                </div>
            </section>

            <!-- Stats Section with Context -->
            <section class="grid grid-cols-1 sm:grid-cols-3 gap-8 mb-16">
                <div
                    class="bg-white p-8 rounded-2xl shadow-sm border border-gray-100 text-center hover:shadow-md transition-shadow"
                >
                    <div class="w-12 h-12 bg-purple-100 rounded-xl flex items-center justify-center mb-4 mx-auto">
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            class="h-6 w-6 text-purple-600"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke="currentColor"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9.5a2 2 0 00-2-2h-2"
                            ></path>
                        </svg>
                    </div>
                    <p class="text-4xl font-bold text-purple-600 mb-2">100+</p>
                    <p class="text-gray-600">Events aggregated monthly from various sources</p>
                </div>
                <div
                    class="bg-white p-8 rounded-2xl shadow-sm border border-gray-100 text-center hover:shadow-md transition-shadow"
                >
                    <div class="w-12 h-12 bg-purple-100 rounded-xl flex items-center justify-center mb-4 mx-auto">
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            class="h-6 w-6 text-purple-600"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke="currentColor"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"
                            ></path>
                        </svg>
                    </div>
                    <p class="text-4xl font-bold text-purple-600 mb-2">5,000+</p>
                    <p class="text-gray-600">Tech enthusiasts discovering events monthly</p>
                </div>
                <div
                    class="bg-white p-8 rounded-2xl shadow-sm border border-gray-100 text-center hover:shadow-md transition-shadow"
                >
                    <div class="w-12 h-12 bg-purple-100 rounded-xl flex items-center justify-center mb-4 mx-auto">
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            class="h-6 w-6 text-purple-600"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke="currentColor"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"
                            ></path>
                        </svg>
                    </div>
                    <p class="text-4xl font-bold text-purple-600 mb-2">20+</p>
                    <p class="text-gray-600">Tech communities connected through our platform</p>
                </div>
            </section>

            <!-- Features Section with Icons -->
            <section class="mb-16">
                <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">Smart Features for Event Discovery</h2>
                <div class="grid grid-cols-1 sm:grid-cols-3 gap-8">
                    <div
                        class="bg-white p-8 rounded-2xl shadow-sm border border-gray-100 hover:shadow-md transition-all group"
                    >
                        <div
                            class="w-12 h-12 bg-purple-100 rounded-xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform"
                        >
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                class="h-6 w-6 text-purple-600"
                                fill="none"
                                viewBox="0 0 24 24"
                                stroke="currentColor"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"
                                ></path>
                            </svg>
                        </div>
                        <h3 class="text-xl font-semibold text-gray-900 mb-4">Automated Discovery</h3>
                        <p class="text-gray-600">
                            Our platform automatically finds and aggregates tech events from various sources, ensuring
                            you never miss important opportunities.
                        </p>
                    </div>
                    <div
                        class="bg-white p-8 rounded-2xl shadow-sm border border-gray-100 hover:shadow-md transition-all group"
                    >
                        <div
                            class="w-12 h-12 bg-purple-100 rounded-xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform"
                        >
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                class="h-6 w-6 text-purple-600"
                                fill="none"
                                viewBox="0 0 24 24"
                                stroke="currentColor"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                        </div>
                        <h3 class="text-xl font-semibold text-gray-900 mb-4">Real-Time Updates</h3>
                        <p class="text-gray-600">
                            Events are updated in real-time as they're published across different platforms and
                            communities.
                        </p>
                    </div>
                    <div
                        class="bg-white p-8 rounded-2xl shadow-sm border border-gray-100 hover:shadow-md transition-all group"
                    >
                        <div
                            class="w-12 h-12 bg-purple-100 rounded-xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform"
                        >
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                class="h-6 w-6 text-purple-600"
                                fill="none"
                                viewBox="0 0 24 24"
                                stroke="currentColor"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
                                ></path>
                            </svg>
                        </div>
                        <h3 class="text-xl font-semibold text-gray-900 mb-4">Smart Calendar</h3>
                        <p class="text-gray-600">
                            View events in an intuitive calendar format and easily sync them with your preferred
                            calendar app.
                        </p>
                    </div>
                </div>
            </section>

            <!-- Benefits Section with Clear Value Props -->
            <section class="mb-16">
                <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">Why Use Cebby?</h2>
                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
                    <div
                        class="bg-white p-8 rounded-2xl shadow-sm border border-gray-100 hover:shadow-md transition-all"
                    >
                        <h3 class="text-xl font-semibold text-gray-900 mb-4">Effortless Discovery</h3>
                        <p class="text-gray-600">
                            No more manual searching. We automatically aggregate events from multiple sources in one
                            place.
                        </p>
                    </div>
                    <div
                        class="bg-white p-8 rounded-2xl shadow-sm border border-gray-100 hover:shadow-md transition-all"
                    >
                        <h3 class="text-xl font-semibold text-gray-900 mb-4">Stay Connected</h3>
                        <p class="text-gray-600">
                            Keep your finger on the pulse of Cebu's tech scene and never miss important community
                            events.
                        </p>
                    </div>
                    <div
                        class="bg-white p-8 rounded-2xl shadow-sm border border-gray-100 hover:shadow-md transition-all"
                    >
                        <h3 class="text-xl font-semibold text-gray-900 mb-4">Save Time</h3>
                        <p class="text-gray-600">
                            Stop checking multiple sites. Get all tech events in one centralized, easy-to-use platform.
                        </p>
                    </div>
                    <div
                        class="bg-white p-8 rounded-2xl shadow-sm border border-gray-100 hover:shadow-md transition-all"
                    >
                        <h3 class="text-xl font-semibold text-gray-900 mb-4">Always Updated</h3>
                        <p class="text-gray-600">
                            Our automated system ensures you always see the latest events as they're announced.
                        </p>
                    </div>
                </div>
            </section>

            <!-- How It Works Section with Visual Steps -->
            <section class="mb-16" id="how-it-works">
                <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">How It Works</h2>
                <div
                    class="bg-white p-8 rounded-2xl shadow-sm border border-gray-100 hover:shadow-md transition-shadow"
                >
                    <div class="max-w-3xl mx-auto">
                        <ol class="space-y-8">
                            <li class="flex items-start gap-4 group">
                                <div
                                    class="flex-shrink-0 w-10 h-10 bg-purple-100 rounded-full flex items-center justify-center mt-1 group-hover:scale-110 transition-transform"
                                >
                                    <span class="text-lg font-semibold text-purple-600">1</span>
                                </div>
                                <div>
                                    <h3 class="text-xl font-semibold text-gray-900 mb-2">Automated Collection</h3>
                                    <p class="text-lg text-gray-600">
                                        Our system continuously scans various sources to automatically collect and
                                        verify tech events happening in Cebu.
                                    </p>
                                </div>
                            </li>
                            <li class="flex items-start gap-4 group">
                                <div
                                    class="flex-shrink-0 w-10 h-10 bg-purple-100 rounded-full flex items-center justify-center mt-1 group-hover:scale-110 transition-transform"
                                >
                                    <span class="text-lg font-semibold text-purple-600">2</span>
                                </div>
                                <div>
                                    <h3 class="text-xl font-semibold text-gray-900 mb-2">Smart Organization</h3>
                                    <p class="text-lg text-gray-600">
                                        Events are automatically categorized and organized for easy browsing. Use
                                        filters to find exactly what interests you.
                                    </p>
                                </div>
                            </li>
                            <li class="flex items-start gap-4 group">
                                <div
                                    class="flex-shrink-0 w-10 h-10 bg-purple-100 rounded-full flex items-center justify-center mt-1 group-hover:scale-110 transition-transform"
                                >
                                    <span class="text-lg font-semibold text-purple-600">3</span>
                                </div>
                                <div>
                                    <h3 class="text-xl font-semibold text-gray-900 mb-2">Easy Access</h3>
                                    <p class="text-lg text-gray-600">
                                        View events in our intuitive calendar interface and sync them to your preferred
                                        calendar app with one click.
                                    </p>
                                </div>
                            </li>
                        </ol>
                    </div>
                </div>
            </section>

            <!-- Testimonials Section -->
            <section class="mb-16">
                <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">Community Feedback</h2>
                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
                    <div
                        class="bg-white p-8 rounded-2xl shadow-sm border border-gray-100 hover:shadow-md transition-all"
                    >
                        <div class="flex items-center gap-4 mb-6">
                            <div class="w-12 h-12 bg-purple-100 rounded-full overflow-hidden">
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    class="h-8 w-8 text-purple-600 m-2"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                </svg>
                            </div>
                            <div>
                                <h3 class="font-semibold text-gray-900">Mark Garcia</h3>
                                <p class="text-sm text-gray-600">Tech Community Member</p>
                            </div>
                        </div>
                        <p class="text-gray-600">
                            "Finally, a platform that automatically keeps track of all tech events in Cebu! No more
                            missing out on important meetups."
                        </p>
                    </div>
                    <div
                        class="bg-white p-8 rounded-2xl shadow-sm border border-gray-100 hover:shadow-md transition-all"
                    >
                        <div class="flex items-center gap-4 mb-6">
                            <div class="w-12 h-12 bg-purple-100 rounded-full overflow-hidden">
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    class="h-8 w-8 text-purple-600 m-2"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                </svg>
                            </div>
                            <div>
                                <h3 class="font-semibold text-gray-900">Sarah Lim</h3>
                                <p class="text-sm text-gray-600">Developer</p>
                            </div>
                        </div>
                        <p class="text-gray-600">
                            "The automated event discovery is amazing! I love how it pulls in events from different
                            sources automatically."
                        </p>
                    </div>
                    <div
                        class="bg-white p-8 rounded-2xl shadow-sm border border-gray-100 hover:shadow-md transition-all"
                    >
                        <div class="flex items-center gap-4 mb-6">
                            <div class="w-12 h-12 bg-purple-100 rounded-full overflow-hidden">
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    class="h-8 w-8 text-purple-600 m-2"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                </svg>
                            </div>
                            <div>
                                <h3 class="font-semibold text-gray-900">John Doe</h3>
                                <p class="text-sm text-gray-600">Community Organizer</p>
                            </div>
                        </div>
                        <p class="text-gray-600">
                            "Great to see our events being automatically included in Cebby. It helps us reach the right
                            audience effortlessly."
                        </p>
                    </div>
                </div>
            </section>

            <!-- FAQs Section with Expanded Questions -->
            <section class="mb-16">
                <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">Common Questions</h2>
                <div class="space-y-6 max-w-4xl mx-auto">
                    <div
                        class="bg-white p-8 rounded-2xl shadow-sm border border-gray-100 hover:shadow-md transition-all"
                    >
                        <h3 class="text-xl font-semibold text-gray-900 mb-4">How does Cebby find events?</h3>
                        <p class="text-gray-600">
                            We use automated systems to aggregate events from various sources including community pages,
                            tech groups, and event platforms. Our system continuously scans and updates the event
                            listings.
                        </p>
                    </div>
                    <div
                        class="bg-white p-8 rounded-2xl shadow-sm border border-gray-100 hover:shadow-md transition-all"
                    >
                        <h3 class="text-xl font-semibold text-gray-900 mb-4">Is Cebby free to use?</h3>
                        <p class="text-gray-600">
                            Yes, Cebby is completely free! We believe in making tech event discovery accessible to
                            everyone in the community.
                        </p>
                    </div>
                    <div
                        class="bg-white p-8 rounded-2xl shadow-sm border border-gray-100 hover:shadow-md transition-all"
                    >
                        <h3 class="text-xl font-semibold text-gray-900 mb-4">What types of events are listed?</h3>
                        <p class="text-gray-600">
                            We focus on tech-related events including workshops, conferences, meetups, hackathons, and
                            networking events. All events are automatically collected and verified.
                        </p>
                    </div>
                    <div
                        class="bg-white p-8 rounded-2xl shadow-sm border border-gray-100 hover:shadow-md transition-all"
                    >
                        <h3 class="text-xl font-semibold text-gray-900 mb-4">
                            How do I get notified about new events?
                        </h3>
                        <p class="text-gray-600">
                            Enable notifications in your browser to get automatic alerts when new events are added. You
                            can also sync events with your calendar for reminders.
                        </p>
                    </div>
                </div>
            </section>

            <!-- Footer CTA with Clear Value Proposition -->
            <section
                class="text-center bg-gradient-to-br from-purple-50 to-purple-100 p-12 rounded-2xl border border-purple-100"
            >
                <h2 class="text-3xl font-bold text-gray-900 mb-6">Stay Connected with Cebu's Tech Scene</h2>
                <p class="text-xl text-gray-600 mb-8 max-w-2xl mx-auto">
                    Let our automated system keep you updated on all the tech events happening in Cebu.
                </p>
                <div class="flex flex-col sm:flex-row gap-4 justify-center">
                    <a
                        href="/calendar"
                        class="inline-flex items-center justify-center px-8 py-3 bg-[#8234E6] hover:bg-[#6c2bc0] text-white font-medium rounded-xl transition-all duration-200 shadow-sm hover:shadow-md hover:scale-[1.02] group"
                    >
                        <span>View Events Calendar</span>
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            class="h-5 w-5 ml-2 group-hover:translate-x-1 transition-transform"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke="currentColor"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                        </svg>
                    </a>
                    <a
                        href="#"
                        class="inline-flex items-center justify-center px-8 py-3 bg-white hover:bg-gray-50 text-[#8234E6] font-medium rounded-xl transition-all duration-200 border border-purple-200 group"
                    >
                        <span>Enable Notifications</span>
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            class="h-5 w-5 ml-2 group-hover:translate-y-1 transition-transform"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke="currentColor"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"
                            ></path>
                        </svg>
                    </a>
                </div>
            </section>
        </div>
    </main>

    <Navigation />
</Layout>
