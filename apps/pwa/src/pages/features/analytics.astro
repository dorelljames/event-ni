---
import Layout from "../../layouts/Layout.astro";
import SEO from "../../components/SEO.astro";

const title = "Gain Insights, Grow Impact - Cebby Analytics";
const description =
  "Unlock deeper insights into your event performance. Cebby's upcoming analytics tools will help you measure ROI, understand engagement, and optimize your events.";
---

<Layout>
  <SEO
    title={title}
    description={description}
    image="/screenshots/analytics.png"
    type="website"
  />

  <!-- Hero Section -->
  <section class="pt-24 pb-16 px-4 bg-white">
    <div class="max-w-6xl mx-auto">
      <div class="grid md:grid-cols-2 gap-12 items-center">
        <div>
          <div class="flex flex-col items-start gap-4 mb-6">
            <div
              class="inline-flex items-center px-4 py-2 rounded-full text-sm font-medium bg-purple-100 text-purple-800"
            >
              Premium Feature
            </div>
            <div
              class="inline-flex items-center px-4 py-2 rounded-full text-sm font-medium bg-green-100 text-green-800"
            >
              Coming Soon
            </div>
          </div>
          <h1 class="text-4xl md:text-6xl font-bold mb-6 text-gray-900">
            Gain Insights, Grow Impact
          </h1>
          <p class="text-xl text-gray-600 leading-relaxed mb-8">
            Unlock deeper insights into your event performance. Cebby's upcoming
            analytics tools will help you measure ROI, understand engagement,
            and optimize your events.
          </p>
          <a
            href="#features"
            class="inline-flex items-center px-6 py-3 bg-purple-600 text-white rounded-lg font-medium hover:bg-purple-700 transition-colors"
          >
            Learn More About Analytics Features
            <svg class="w-5 h-5 ml-2" viewBox="0 0 24 24" fill="none">
              <path
                d="M5 12H19M19 12L12 5M19 12L12 19"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"></path>
            </svg>
          </a>
        </div>
        <div class="hidden md:block">
          <img
            src="/illustrations/data-reports.svg"
            alt="Analytics Dashboard"
            class="w-full rounded-2xl"
          />
        </div>
      </div>
    </div>
  </section>

  <!-- Key Features -->
  <section id="features" class="py-20 px-4 bg-gray-50">
    <div class="max-w-6xl mx-auto">
      <div class="text-center mb-16">
        <h2 class="text-3xl font-bold mb-6 text-gray-900">
          Powerful Analytics Features
        </h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Make data-driven decisions with comprehensive insights
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-8">
        {
          [
            {
              title: "Engagement Tracking",
              description:
                "See how your events perform across platforms, with data on views, shares, and user interactions.",
              icon: "ðŸ“Š",
            },
            {
              title: "Audience Demographics",
              description:
                "Get insights into your audience demographics to better tailor your events and reach the right people.",
              icon: "ðŸ‘¥",
            },
            {
              title: "ROI Measurement",
              description:
                "Measure event success with clear data, helping you understand the impact of your marketing efforts and improve future planning.",
              icon: "ðŸ“ˆ",
            },
          ].map((feature) => (
            <div class="bg-white p-8 rounded-xl shadow-sm hover:shadow-md transition-shadow">
              <div class="text-4xl mb-4">{feature.icon}</div>
              <h3 class="text-xl font-semibold mb-3 text-gray-900">
                {feature.title}
              </h3>
              <p class="text-gray-600">{feature.description}</p>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Detailed Features -->
  <section class="py-20 px-4 bg-white">
    <div class="max-w-4xl mx-auto">
      <!-- Engagement Tracking -->
      <div class="mb-16">
        <h2 class="text-3xl font-bold mb-8 text-gray-900">
          Track What Matters
        </h2>
        <div class="space-y-6">
          {
            [
              {
                title: "Cross-Platform Performance",
                description:
                  "Monitor event performance across all platforms in one unified dashboard.",
              },
              {
                title: "Interaction Analytics",
                description:
                  "Track views, shares, RSVPs, and engagement patterns to optimize your reach.",
              },
              {
                title: "Real-Time Insights",
                description:
                  "Get instant feedback on how your events are performing and make timely adjustments.",
              },
            ].map((item) => (
              <div class="bg-gray-50 p-8 rounded-xl">
                <h3 class="text-xl font-semibold mb-4 text-gray-900">
                  {item.title}
                </h3>
                <p class="text-gray-600">{item.description}</p>
              </div>
            ))
          }
        </div>
      </div>

      <!-- Audience Demographics -->
      <div class="mb-16">
        <h2 class="text-3xl font-bold mb-8 text-gray-900">
          Know Your Audience
        </h2>
        <div class="space-y-6">
          {
            [
              {
                title: "Demographic Insights",
                description:
                  "Understand your audience's age groups, interests, and engagement patterns.",
              },
              {
                title: "Geographic Distribution",
                description:
                  "See where your attendees are coming from and optimize your event locations.",
              },
              {
                title: "Interest Mapping",
                description:
                  "Identify what topics and event types resonate most with your community.",
              },
            ].map((item) => (
              <div class="bg-gray-50 p-8 rounded-xl">
                <h3 class="text-xl font-semibold mb-4 text-gray-900">
                  {item.title}
                </h3>
                <p class="text-gray-600">{item.description}</p>
              </div>
            ))
          }
        </div>
      </div>

      <!-- ROI Measurement -->
      <div>
        <h2 class="text-3xl font-bold mb-8 text-gray-900">Measure Success</h2>
        <div class="space-y-6">
          {
            [
              {
                title: "Event Performance Metrics",
                description:
                  "Track key metrics to measure the success of your events and marketing efforts.",
              },
              {
                title: "Conversion Tracking",
                description:
                  "Monitor registration rates and understand what drives attendance.",
              },
              {
                title: "Trend Analysis",
                description:
                  "Identify patterns and optimize your event strategy over time.",
              },
            ].map((item) => (
              <div class="bg-gray-50 p-8 rounded-xl">
                <h3 class="text-xl font-semibold mb-4 text-gray-900">
                  {item.title}
                </h3>
                <p class="text-gray-600">{item.description}</p>
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </section>

  <!-- Get Started -->
  <section class="py-20 px-4 bg-purple-700">
    <div class="max-w-4xl mx-auto text-center">
      <h2 class="text-3xl font-bold mb-6 text-white">
        Be First to Access Premium Analytics
      </h2>
      <p class="text-xl mb-12 text-purple-100 max-w-2xl mx-auto">
        Join our waitlist to get early access to these powerful analytics
        features and shape the future of event management.
      </p>
      <div class="flex flex-wrap gap-4 justify-center">
        <a
          href="https://dorelljames.notion.site/13a3f8eda0708062b70fc97987d7ba32"
          target="_blank"
          class="px-8 py-4 bg-white text-purple-600 rounded-lg font-semibold hover:bg-purple-50 transition-all duration-300 hover:scale-105"
        >
          Join Waitlist
        </a>
        <a
          href="/contact"
          class="px-8 py-4 border-2 border-white text-white rounded-lg font-semibold hover:bg-white/10 transition-all duration-300 hover:scale-105"
        >
          Contact Us
        </a>
      </div>
    </div>
  </section>
</Layout>
