---
import Layout from "../../layouts/Layout.astro";
import SEO from "../../components/SEO.astro";

const title = "Features - Cebby";
const description =
  "Discover how Cebby's features can help you manage and promote your tech events more effectively.";

const features = [
  {
    title: "Enhanced Visibility",
    description: "Reach more people with cross-platform event promotion",
    link: "/features/visibility",
    icon: "🔍",
  },
  {
    title: "Community Management",
    description: "Manage your events efficiently across multiple platforms",
    link: "/features/community-management",
    icon: "👥",
  },
  {
    title: "Analytics",
    description: "Gain insights into your event performance",
    link: "/features/analytics",
    icon: "📊",
    comingSoon: true,
  },
];
---

<Layout>
  <SEO
    title={title}
    description={description}
    image="/screenshots/features.png"
    type="website"
  />

  <section class="pt-24 pb-16 px-4 bg-white">
    <div class="max-w-6xl mx-auto">
      <div class="text-center mb-16">
        <h1 class="text-4xl md:text-6xl font-bold mb-6 text-gray-900">
          Features
        </h1>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Everything you need to manage and promote your tech events effectively
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-8">
        {
          features.map((feature) => (
            <a href={feature.link} class="block">
              <div class="bg-gray-50 p-8 rounded-xl hover:shadow-md transition-shadow">
                <div class="text-4xl mb-4">{feature.icon}</div>
                <h2 class="text-2xl font-semibold mb-3 text-gray-900">
                  {feature.title}
                  {feature.comingSoon && (
                    <span class="ml-2 px-2 py-1 text-sm bg-green-100 text-green-800 rounded-full">
                      Coming Soon
                    </span>
                  )}
                </h2>
                <p class="text-gray-600">{feature.description}</p>
              </div>
            </a>
          ))
        }
      </div>
    </div>
  </section>
</Layout>

