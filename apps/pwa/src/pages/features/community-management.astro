---
import Layout from "../../layouts/Layout.astro";
import SEO from "../../components/SEO.astro";

const title = "Seamless Community Event Management - Cebby";
const description =
  "Streamline event management with a platform designed for community needs. Keep your audience informed and engaged, all from a single source.";
---

<Layout>
  <SEO
    title={title}
    description={description}
    image="/screenshots/community-management.png"
    type="website"
  />

  <!-- Hero Section -->
  <section class="pt-24 pb-16 px-4 bg-white">
    <div class="max-w-6xl mx-auto">
      <div class="grid md:grid-cols-2 gap-12 items-center">
        <div>
          <div
            class="inline-flex items-center px-4 py-2 rounded-full text-sm font-medium bg-purple-100 text-purple-800 mb-6"
          >
            For Communities
          </div>
          <h1 class="text-4xl md:text-6xl font-bold mb-6 text-gray-900">
            Seamless Community Event Management
          </h1>
          <p class="text-xl text-gray-600 leading-relaxed mb-8">
            Streamline event management with a platform designed for community
            needs. Keep your audience informed and engaged, all from a single
            source.
          </p>
          <a
            href="/partner"
            class="inline-flex items-center px-6 py-3 bg-purple-600 text-white rounded-lg font-medium hover:bg-purple-700 transition-colors"
          >
            Start Managing Your Community Events
            <svg class="w-5 h-5 ml-2" viewBox="0 0 24 24" fill="none">
              <path
                d="M5 12H19M19 12L12 5M19 12L12 19"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"></path>
            </svg>
          </a>
        </div>
        <div class="hidden md:block">
          <img
            src="/illustrations/multiple-platforms.svg"
            alt="Community Management Dashboard"
            class="w-full rounded-2xl"
          />
        </div>
      </div>
    </div>
  </section>

  <!-- Key Features -->
  <section class="py-20 px-4 bg-gray-50">
    <div class="max-w-6xl mx-auto">
      <div class="text-center mb-16">
        <h2 class="text-3xl font-bold mb-6 text-gray-900">
          Powerful Management Features
        </h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Everything you need to manage your community events effectively
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-8">
        {
          [
            {
              title: "Centralized Management",
              description:
                "Manage all your events in one place, reducing the time and effort it takes to update event details across platforms.",
              icon: "ðŸŽ¯",
            },
            {
              title: "Multi-Platform Updates",
              description:
                "Ensure that every update you make is reflected on all your event platforms. Cebby handles the sync so your audience gets accurate information everywhere.",
              icon: "ðŸ”„",
            },
            {
              title: "Community Engagement Tools",
              description:
                "Keep your community engaged with easy-to-use features for RSVPs, event reminders, and feedback collection.",
              icon: "ðŸ‘¥",
            },
          ].map((feature) => (
            <div class="bg-white p-8 rounded-xl shadow-sm hover:shadow-md transition-shadow">
              <div class="text-4xl mb-4">{feature.icon}</div>
              <h3 class="text-xl font-semibold mb-3 text-gray-900">
                {feature.title}
              </h3>
              <p class="text-gray-600">{feature.description}</p>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- How It Works -->
  <section class="py-20 px-4 bg-white">
    <div class="max-w-6xl mx-auto">
      <div class="grid md:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-3xl font-bold mb-8 text-gray-900">
            How Community Management Works
          </h2>
          <div class="space-y-8">
            {
              [
                {
                  step: 1,
                  title: "Connect Your Platforms",
                  description: "Link your existing event platforms to Cebby",
                },
                {
                  step: 2,
                  title: "Manage Events",
                  description:
                    "Create and update events from a single dashboard",
                },
                {
                  step: 3,
                  title: "Engage Your Community",
                  description: "Keep your audience informed and involved",
                },
              ].map((step) => (
                <div class="flex gap-4">
                  <div class="flex-shrink-0 w-8 h-8 rounded-full bg-purple-600 text-white flex items-center justify-center font-semibold">
                    {step.step}
                  </div>
                  <div>
                    <h3 class="text-xl font-semibold mb-2">{step.title}</h3>
                    <p class="text-gray-600">{step.description}</p>
                  </div>
                </div>
              ))
            }
          </div>
        </div>
        <div>
          <img
            src="/illustrations/data-reports.svg"
            alt="Event Management Flow"
            class="w-full rounded-2xl"
          />
        </div>
      </div>
    </div>
  </section>

  <!-- Features Detail -->
  <section class="py-20 px-4 bg-gray-50">
    <div class="max-w-4xl mx-auto">
      <div class="space-y-16">
        <!-- Centralized Management -->
        <div>
          <h2 class="text-3xl font-bold mb-8 text-gray-900">
            Centralized Event Management
          </h2>
          <div class="space-y-6">
            {
              [
                {
                  title: "Single Dashboard Control",
                  description:
                    "Manage all your community events from one intuitive interface. No more switching between platforms.",
                },
                {
                  title: "Bulk Updates",
                  description:
                    "Make changes to multiple events simultaneously, saving time and ensuring consistency.",
                },
                {
                  title: "Event Templates",
                  description:
                    "Create templates for recurring events to streamline your workflow.",
                  comingSoon: true,
                },
              ].map((item) => (
                <div class="bg-white p-8 rounded-xl shadow-sm">
                  <div class="flex items-center gap-3 mb-4">
                    <h3 class="text-xl font-semibold text-gray-900">
                      {item.title}
                    </h3>
                    {item.comingSoon && (
                      <span class="px-3 py-1 text-sm bg-purple-100 text-purple-800 rounded-full">
                        Coming Soon
                      </span>
                    )}
                  </div>
                  <p class="text-gray-600">{item.description}</p>
                </div>
              ))
            }
          </div>
        </div>

        <!-- Community Tools -->
        <div>
          <h2 class="text-3xl font-bold mb-8 text-gray-900">
            Community Engagement Tools
          </h2>
          <div class="space-y-6">
            {
              [
                {
                  title: "Automated Notifications",
                  description:
                    "Keep your community informed with automatic updates about event changes and reminders.",
                },
                {
                  title: "RSVP Management",
                  description:
                    "Track attendance and manage registrations across all your platforms in one place.",
                  comingSoon: true,
                },
                {
                  title: "Feedback Collection",
                  description:
                    "Gather and analyze community feedback to improve future events.",
                  comingSoon: true,
                },
              ].map((item) => (
                <div class="bg-white p-8 rounded-xl shadow-sm">
                  <div class="flex items-center gap-3 mb-4">
                    <h3 class="text-xl font-semibold text-gray-900">
                      {item.title}
                    </h3>
                    {item.comingSoon && (
                      <span class="px-3 py-1 text-sm bg-purple-100 text-purple-800 rounded-full">
                        Coming Soon
                      </span>
                    )}
                  </div>
                  <p class="text-gray-600">{item.description}</p>
                </div>
              ))
            }
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Get Started -->
  <section class="py-20 px-4 bg-purple-700">
    <div class="max-w-4xl mx-auto text-center">
      <h2 class="text-3xl font-bold mb-6 text-white">
        Ready to Transform Your Community Management?
      </h2>
      <p class="text-xl mb-12 text-purple-100 max-w-2xl mx-auto">
        Join Cebby today and start managing your community events more
        effectively.
      </p>
      <div class="flex flex-wrap gap-4 justify-center">
        <a
          href="/partner"
          class="px-8 py-4 bg-white text-purple-600 rounded-lg font-semibold hover:bg-purple-50 transition-all duration-300 hover:scale-105"
        >
          Get Started Free
        </a>
        <a
          href="/contact"
          class="px-8 py-4 border-2 border-white text-white rounded-lg font-semibold hover:bg-white/10 transition-all duration-300 hover:scale-105"
        >
          Contact Us
        </a>
      </div>
    </div>
  </section>
</Layout>
