---
import Layout from "../layouts/Layout.astro";
import SEO from "../components/SEO.astro";

const title = "Server Error - Cebby";
const description = "Something went wrong on our end. We're working to fix it.";
---

<Layout>
  <SEO title={title} description={description} type="website" noindex={true} />

  <section class="min-h-[80vh] flex items-center justify-center px-4">
    <div class="max-w-2xl mx-auto text-center">
      <h1 class="text-4xl md:text-6xl font-bold mb-6 text-gray-900">500</h1>
      <p class="text-xl text-gray-600 mb-8">
        Something went wrong on our end. We're working to fix it.
      </p>
      <div class="flex flex-wrap gap-4 justify-center">
        <a
          href="/"
          class="px-6 py-3 bg-purple-600 text-white rounded-lg font-medium hover:bg-purple-700 transition-colors"
        >
          Go Home
        </a>
        <a
          href="/contact"
          class="px-6 py-3 border border-gray-300 text-gray-700 rounded-lg font-medium hover:border-gray-400 transition-colors"
        >
          Contact Support
        </a>
      </div>
    </div>
  </section>
</Layout>

