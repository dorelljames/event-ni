---
import Layout from "../layouts/Layout.astro";
import SEO from "../components/SEO.astro";

const title = "Cebby - All tech events in Cebu in one place";
const description =
  "Discover all tech events in Cebu in one place. Aggregating events from Facebook, Meetup, Eventbrite and more.";
---

<Layout>
  <SEO
    title={title}
    description={description}
    image="/screenshots/cover.png"
    type="website"
  />

  <main class="min-h-screen bg-gray-100 relative overflow-hidden">
    <!-- Mobile Devices Display -->
    <div
      class="absolute left-0 bottom-0 w-full h-[60%] flex justify-center items-end"
    >
      <!-- Left Phone -->
      <div class="transform -rotate-12 translate-x-12 translate-y-8">
        <div
          class="w-64 h-[500px] bg-white rounded-[3rem] shadow-xl border-8 border-black overflow-hidden"
        >
          <img
            src="/screenshots/mobile-app.png"
            alt="Cebby Mobile App"
            class="w-full h-full object-cover"
          />
        </div>
      </div>

      <!-- Center Phone -->
      <div class="z-10 transform translate-y-4">
        <div
          class="w-72 h-[550px] bg-white rounded-[3rem] shadow-xl border-8 border-black overflow-hidden"
        >
          <img
            src="/screenshots/mobile-app.png"
            alt="Cebby Mobile App"
            class="w-full h-full object-cover"
          />
        </div>
      </div>

      <!-- Right Phone -->
      <div class="transform rotate-12 -translate-x-12 translate-y-8">
        <div
          class="w-64 h-[500px] bg-white rounded-[3rem] shadow-xl border-8 border-black overflow-hidden"
        >
          <img
            src="/screenshots/mobile-app.png"
            alt="Cebby Mobile App"
            class="w-full h-full object-cover"
          />
        </div>
      </div>
    </div>

    <!-- Content -->
    <div class="relative z-20 max-w-4xl mx-auto pt-20 px-4 text-center">
      <!-- Logo -->
      <div class="mb-8">
        <h1 class="text-6xl md:text-8xl font-bold text-purple-600 mb-4">
          cebby
        </h1>
      </div>

      <!-- Tagline -->
      <h2 class="text-2xl md:text-4xl text-gray-800 mb-12">
        All tech events in Cebu<br />in one place...
      </h2>

      <!-- Platform Icons -->
      <div class="flex items-center justify-center gap-8 mb-8">
        <!-- Facebook -->
        <div class="relative">
          <div
            class="w-16 h-16 bg-blue-500 rounded-full flex items-center justify-center"
          >
            <svg
              class="w-8 h-8 text-white"
              viewBox="0 0 24 24"
              fill="currentColor"
            >
              <path
                d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"
              ></path>
            </svg>
          </div>
          <div class="absolute -bottom-6 left-1/2 transform -translate-x-1/2">
            <div class="w-1 h-12 bg-blue-400 opacity-50"></div>
          </div>
        </div>

        <!-- Meetup -->
        <div class="relative">
          <div
            class="w-16 h-16 bg-red-500 rounded-full flex items-center justify-center"
          >
            <svg
              class="w-8 h-8 text-white"
              viewBox="0 0 24 24"
              fill="currentColor"
            >
              <path
                d="M23.978 20.238c-.304-1.931-3.874-.444-4.096-2.559-.313-2.998 4.15-9.459 3.797-11.972-.313-2.255-1.841-2.73-3.165-2.756-1.284-.02-1.623.182-2.058.435-.253.146-.612.435-1.112-.041-.334-.318-.557-.536-.905-.819-.182-.142-.466-.324-.945-.324-.479 0-.863.182-1.156.324-.348.283-.571.501-.905.819-.5.476-.858.187-1.111.041-.435-.253-.774-.455-2.058-.435-1.324.026-2.852.501-3.165 2.756-.353 2.513 4.11 8.974 3.797 11.972-.222 2.115-3.792.628-4.096 2.559-.347 2.243 6.558 3.635 11.089 3.635 4.531 0 11.436-1.392 11.089-3.635z"
              ></path>
            </svg>
          </div>
          <div class="absolute -bottom-6 left-1/2 transform -translate-x-1/2">
            <div class="w-1 h-8 bg-red-400 opacity-50"></div>
          </div>
        </div>

        <!-- Eventbrite -->
        <div class="relative">
          <div
            class="w-16 h-16 bg-orange-500 rounded-full flex items-center justify-center"
          >
            <svg
              class="w-8 h-8 text-white"
              viewBox="0 0 24 24"
              fill="currentColor"
            >
              <path
                d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"
              ></path>
            </svg>
          </div>
          <div class="absolute -bottom-6 left-1/2 transform -translate-x-1/2">
            <div class="w-1 h-10 bg-orange-400 opacity-50"></div>
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>

<style>
  /* Add any additional styles here */
  main {
    background: linear-gradient(180deg, #f3f4f6 0%, #e5e7eb 100%);
  }
</style>

