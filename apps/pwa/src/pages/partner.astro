---
import Layout from "../layouts/Layout.astro";
import SEO from "../components/SEO.astro";

const title = "Partner with Cebby - Empowering Cebu Tech";
const description =
  "Join Cebby's mission to shape Cebu's tech future. Gain visibility, audience insights, and tools to foster community growth through our partnership program.";
---

<Layout>
  <SEO
    title={title}
    description={description}
    image="/screenshots/partnership.png"
    type="website"
  />

  <!-- Hero Section -->
  <section class="pt-24 pb-16 px-4 bg-white">
    <div class="max-w-6xl mx-auto">
      <div class="grid md:grid-cols-2 gap-12 items-center">
        <div>
          <div
            class="inline-flex items-center px-4 py-2 rounded-full text-sm font-medium bg-purple-100 text-purple-800 mb-6"
          >
            Partnership Program
          </div>
          <h1 class="text-4xl md:text-6xl font-bold mb-6 text-gray-900">
            Join Our Mission to Empower Cebu Tech
          </h1>
          <p class="text-xl text-gray-600 leading-relaxed mb-8">
            Become a partner with Cebby and help shape Cebu's tech future. By
            joining, you'll gain visibility, audience insights, and tools to
            foster community growth.
          </p>
          <div class="flex flex-wrap gap-4">
            <a
              href="#get-started"
              class="px-8 py-4 bg-purple-600 text-white rounded-lg font-semibold hover:bg-purple-700 transition-all duration-300 hover:scale-105"
            >
              Become a Partner
            </a>
            <a
              href="#learn-more"
              class="px-8 py-4 border border-gray-300 text-gray-700 rounded-lg font-semibold hover:border-gray-400 transition-all duration-300 hover:scale-105"
            >
              Learn More
            </a>
          </div>
        </div>
        <div class="hidden md:block">
          <img
            src="/illustrations/agreement.svg"
            alt="Partnership"
            class="w-full rounded-2xl"
          />
        </div>
      </div>
    </div>
  </section>

  <!-- Key Benefits -->
  <section class="py-20 px-4 bg-gray-50">
    <div class="max-w-6xl mx-auto">
      <div class="text-center mb-16">
        <h2 class="text-3xl font-bold mb-6 text-gray-900">
          Partnership Benefits
        </h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Join forces with us to create more impactful events and reach broader
          audiences
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-8">
        {
          [
            {
              title: "Visibility in Cebu's Tech Community",
              description:
                "Reach a wide, targeted audience passionate about tech and events in Cebu",
              icon: "ðŸŽ¯",
            },
            {
              title: "Community and Audience Insights",
              description:
                "Enjoy optional analytics that offer a clear picture of audience engagement and event performance",
              icon: "ðŸ“Š",
            },
            {
              title: "Flexible Access Levels",
              description:
                "Choose from various access levels tailored to your organization's needs",
              icon: "ðŸ”‘",
            },
          ].map((benefit) => (
            <div class="bg-white p-8 rounded-xl shadow-sm hover:shadow-md transition-shadow">
              <div class="text-4xl mb-4">{benefit.icon}</div>
              <h3 class="text-xl font-semibold mb-3 text-gray-900">
                {benefit.title}
              </h3>
              <p class="text-gray-600">{benefit.description}</p>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Partnership Structure -->
  <section class="py-20 px-4 bg-white">
    <div class="max-w-6xl mx-auto">
      <div class="text-center mb-16">
        <h2 class="text-3xl font-bold mb-6 text-gray-900">
          How Partnership Works
        </h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          A simple process to get started with Cebby
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-12 items-center">
        <div>
          <div class="space-y-8">
            {
              [
                {
                  step: 1,
                  title: "Choose Your Access Level",
                  description:
                    "Select the partnership tier that matches your needs",
                },
                {
                  step: 2,
                  title: "Integration Setup",
                  description:
                    "We'll help you set up the necessary integrations",
                },
                {
                  step: 3,
                  title: "Start Growing Together",
                  description:
                    "Begin reaching wider audiences and gaining insights",
                },
              ].map((step) => (
                <div class="flex gap-4">
                  <div class="flex-shrink-0 w-8 h-8 rounded-full bg-purple-600 text-white flex items-center justify-center font-semibold">
                    {step.step}
                  </div>
                  <div>
                    <h3 class="text-xl font-semibold mb-2">{step.title}</h3>
                    <p class="text-gray-600">{step.description}</p>
                  </div>
                </div>
              ))
            }
          </div>
        </div>
        <div>
          <img
            src="/illustrations/data-reports.svg"
            alt="Partnership Structure"
            class="w-full rounded-2xl"
          />
        </div>
      </div>
    </div>
  </section>

  <!-- Get Started -->
  <section id="get-started" class="py-20 px-4 bg-purple-700">
    <div class="max-w-4xl mx-auto text-center">
      <h2 class="text-3xl font-bold mb-6 text-white">Ready to Get Started?</h2>
      <p class="text-xl mb-12 text-purple-100 max-w-2xl mx-auto">
        Join us in creating a more connected tech community. Become a partner
        today and start reaching new audiences.
      </p>
      <div class="flex flex-wrap gap-4 justify-center">
        <a
          href="https://dorelljames.notion.site/13a3f8eda0708062b70fc97987d7ba32"
          target="_blank"
          class="px-8 py-4 bg-white text-purple-600 rounded-lg font-semibold hover:bg-purple-50 transition-all duration-300 hover:scale-105"
        >
          Apply Now
        </a>
        <a
          href="/contact"
          class="px-8 py-4 border-2 border-white text-white rounded-lg font-semibold hover:bg-white/10 transition-all duration-300 hover:scale-105"
        >
          Contact Us
        </a>
      </div>
    </div>
  </section>
</Layout>
